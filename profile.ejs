<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body> 
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">LogOut</a>
        </div>
        <h3 class="text-3xl ">PROFILE : <%= user.name %> </h3>
        <h5 class="mb-5">You can create a new post.</h5>
        <form method="post" action="/post">
            <textarea placeholder="what's on your mind ?" class="p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md block" name="content" id=""></textarea>
            <input class="px-3 w-40 py-2 bg-blue-500 text-small rounded-md mt-2" type="submit" value="Create New Post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts.</h3>
            <div class="postcontainer mt-5">
               <% user.posts.reverse().forEach(function(post){ %>
                <div class="post w-1/3 p-4 mb-4 border-2 rounded-md border-[1px] border-zinc-800 bg-zinc-700">
                    <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
                    <p class="text-sm tracking-tight"><%= post.content %></p>
                    <span class="inline-block mt-2"><%= post.likes.length %> Likes</span>
                    <div class="btns flex gap-4 mt-1">
                        <a href="/like/<%= post._id %>" class="text-blue-500"><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %></a>
                        <a href="/edit/<%= post._id%>" class="text-zinc-300">edit</a>

                    </div>
                </div>
               <% }) %>
            </div>
        </div>
    </div>
</body>
</html>
